---
const { t } = Astro.props;
---

<main class="flex-grow">

    <!-- Home -->
    <section id="home" class="bg-aurora min-h-screen flex items-center justify-center text-white px-4 scroll-mt-20 md:scroll-mt-24">
        <div class="max-w-6xl w-full grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
            <!-- Lado esquerdo: texto -->
            <!-- <div class="text-left space-y-4">
                <h1 class="text-4xl md:text-5xl font-bold leading-tight">
                    <span id="typing-h1" class="whitespace-pre-line">{t.home.title}</span>
                </h1>
                <p id="typing-p" class="text-lg md:text-xl opacity-90 whitespace-pre-line">
                    {t.home.p}
                </p>
            </div> -->

            <!-- Lado esquerdo: texto -->
            <div class="text-left space-y-4">
                <h1 class="text-4xl md:text-5xl font-bold leading-tight">
                    <span id="typing-h1" class="whitespace-pre-line"></span>
                </h1>
                <p id="typing-p" class="text-lg md:text-xl opacity-90 whitespace-pre-line">
                </p>
            </div>

            <!-- Lado direito -->
            <div id="flip-card" class="w-72 h-72 md:w-96 md:h-96 [perspective:1000px] relative cursor-pointer group">
                <div id="flip-inner"
                    class="relative w-full h-full duration-700 preserve-3d transition-transform rounded-full">
                    <!-- Frente -->
                    <div
                        class="absolute w-full h-full backface-hidden rounded-full overflow-hidden border-4 border-white/30 shadow-xl">
                        <img src="/imgs/marginal2.jpeg" alt="Foto 1" class="w-full h-full object-cover" />
                    </div>
                    <!-- Verso -->
                    <div
                        class="absolute w-full h-full backface-hidden rotate-y-180 rounded-full overflow-hidden border-4 border-white/30 shadow-xl">
                        <img src="/imgs/marginalghibli.png" alt="Foto 2" class="w-full h-full object-cover" />
                    </div>
                </div>
                <!-- Indicador visual - de alteracao -->
                <div
                    class="absolute inset-0 bg-black/40 backdrop-blur-sm text-white flex flex-col items-center justify-center rounded-full opacity-0 group-hover:opacity-100 transition duration-500">
                    <svg class="w-8 h-8 mb-2 animate-spin-slow" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-width="2" d="M4 4v6h6M20 20v-6h-6M4 20l6-6M20 4l-6 6"></path>
                    </svg>
                    <span class="text-sm">Clique para ver outro lado</span>
                </div>
            </div>

        </div>
    </section>

    <!-- Sobre Mim -->
     <section id="about" class="min-h-screen py-20 bg-white scroll-mt-20 md:scroll-mt-24">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">
                {t.about.title}
            </h2>

            <!-- Informações Pessoais -->
            <div class="grid md:grid-cols-2 gap-8 mb-16">
                <div class="space-y-4 p-6 bg-gray-50 rounded-xl" data-aos="fade-right">
                    <h3 class="text-2xl font-semibold text-gray-800">
                        {t.about.who.title}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {t.about.who.text}
                    </p>
                </div>

                <div class="space-y-4 p-6 bg-gray-50 rounded-xl" data-aos="fade-left">
                    <h3 class="text-2xl font-semibold text-gray-800">
                        {t.about.skills.title}
                    </h3>

                    <!-- Desenvolvimento Web (PHP/Laravel) -->
                    <div data-aos="zoom-in-up">
                        <h4 class="text-md font-medium text-blue-700 mb-2">
                            {t.about.skills.backend}
                        </h4>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                                {t.about.skills.items.php}
                            </span>
                            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                                {t.about.skills.items.laravel}
                            </span>
                            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                                {t.about.skills.items.mysql}
                            </span>
                        </div>
                    </div>

                    <!-- Desenvolvimento Web (Front-end / Fullstack JS) -->
                    <div data-aos="zoom-in-up" data-aos-delay="100">
                        <h4 class="text-md font-medium text-green-700 mb-2">
                            {t.about.skills.js}
                        </h4>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">
                                {t.about.skills.items.react}
                            </span>
                            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">
                                {t.about.skills.items.express}
                            </span>
                            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">
                                {t.about.skills.items.mongo}
                            </span>
                            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">
                                {t.about.skills.items.js}
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timeline -->
            <div class="relative">
                <!-- Linha vertical -->
                <div
                    class="absolute left-0 md:left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gray-200 hidden md:block">
                </div>

                <!-- Experiência Profissional -->
                <div class="mb-16">
                    <h3 class="text-2xl font-semibold text-gray-800 mb-8 text-center">
                        {t.about.experienceTitle}
                    </h3>

                    <!-- Experiência ISTEC -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.experiences.istec.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {t.about.experiences.istec.company}
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.experiences.istec.period}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-blue-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {t.about.experiences.istec.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Experiência ISPT -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.experiences.ispt.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {t.about.experiences.ispt.company}
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.experiences.ispt.period}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-blue-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {t.about.experiences.ispt.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Educação e Cursos -->
                <div class="mb-16">
                    <h3 class="text-2xl font-semibold text-gray-800 mb-8 text-center">
                        {t.about.educationTitle}
                    </h3>

                    <!-- Técnico -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.education.tecnico.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {t.about.education.tecnico.institution}
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.education.tecnico.period}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-green-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {t.about.education.tecnico.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- PHP -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.education.php.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {t.about.education.php.institution}
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.education.php.period}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-green-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {t.about.education.php.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bytes4Future -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.education.bytes4future.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {
                                        t.about.education.bytes4future
                                        .institution
                                        }
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.education.bytes4future.period}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-green-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {
                                        t.about.education.bytes4future
                                        .description
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- CTeSP -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.education.ctesp.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {t.about.education.ctesp.institution}
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.education.ctesp.period}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-green-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {t.about.education.ctesp.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Eventos -->
                <div class="mb-16">
                    <h3 class="text-2xl font-semibold text-gray-800 mb-8 text-center">
                        {t.about.eventsTitle}
                    </h3>

                    <!-- Apps for Good -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.events.appsforgood.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {t.about.events.appsforgood.location}
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.events.appsforgood.year}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-purple-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {t.about.events.appsforgood.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Robot Party -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.events.robotparty.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {t.about.events.robotparty.location}
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.events.robotparty.year}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-purple-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {t.about.events.robotparty.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Web Summit -->
                    <div class="relative mb-8">
                        <div class="md:flex items-center" data-aos="fade-right" data-aos-duration="1000"
                            data-aos-offset="200">
                            <div class="md:w-1/2 md:pr-8 md:text-right">
                                <div class="p-6 bg-white rounded-xl shadow-md border border-gray-100">
                                    <h4 class="text-lg font-semibold text-gray-800">
                                        {t.about.events.websummit.title}
                                    </h4>
                                    <p class="text-blue-600">
                                        {t.about.events.websummit.location}
                                    </p>
                                    <p class="text-gray-500">
                                        {t.about.events.websummit.year}
                                    </p>
                                </div>
                            </div>
                            <div
                                class="hidden md:block w-4 h-4 bg-purple-500 rounded-full absolute left-1/2 transform -translate-x-1/2">
                            </div>
                            <div class="md:w-1/2 md:pl-8 mt-6 md:mt-0">
                                <div class="p-6 bg-gray-50 rounded-xl">
                                    <p class="text-gray-600">
                                        {t.about.events.websummit.description}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!-- Trabalhos Realizados -->
    <section id="works" class="min-h-screen py-20 bg-gray-100 scroll-mt-20 md:scroll-mt-24">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12">
                {t.projects.title}
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Trabalho - jedicon -->
                <div class="group relative bg-white rounded-xl shadow-lg overflow-hidden" data-aos="fade-up"
                    data-aos-anchor-placement="bottom-bottom">
                    <div class="relative h-64 overflow-hidden flex items-center justify-center bg-white">
                        <img src="/imgs/jobs/jedicon/logo/logo_jedicon.png" alt="JediconPT_logo"
                            class="max-h-40 w-auto object-contain mx-auto" />

                        <!-- Botão Lupa Mobile -->
                        <button type="button"
                            class="absolute right-2 top-2 md:hidden bg-white/80 rounded-full p-2 shadow show-carousel-btn"
                            aria-label="Ver imagens">
                            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                        <!-- Botão Galeria Mobile -->
                        <button type="button"
                            class="absolute right-2 top-2 md:hidden bg-white/80 rounded-full p-2 shadow show-carousel-btn"
                            aria-label="Ver galeria de imagens" title="Ver galeria de imagens">
                            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor"
                                viewBox="0 0 24 24">
                                <rect x="3" y="5" width="18" height="14" rx="2" stroke-width="2" />
                                <path d="M21 19l-5.5-7-4.5 6-3-4-4 5" stroke-width="2" />
                                <circle cx="8.5" cy="10.5" r="1.5" stroke-width="2" />
                            </svg>
                        </button>
                    </div>

                    <!-- Carrossel de Imagens (Desktop: hover, Mobile: toggle) -->
                    <div
                        class="carousel-overlay absolute inset-0 z-20 flex items-center justify-center bg-black/80 opacity-0 pointer-events-none transition-opacity duration-300 group-hover:opacity-100 group-hover:pointer-events-auto md:group-hover:opacity-100 md:group-hover:pointer-events-auto">
                        <div class="relative w-full h-full flex flex-col justify-center">
                            <div class="slides-container h-full">
                                <div class="slide absolute inset-0 opacity-0 transition-opacity duration-500">
                                    <img src="/imgs/jobs/jedicon/Imgs/Picture1.png" alt="Slide 1"
                                        class="w-full h-full object-contain">

                                </div>
                                <div class="slide absolute inset-0 opacity-0 transition-opacity duration-500">
                                    <img src="/imgs/jobs/jedicon/Imgs/Picture2.png" alt="Slide 2"
                                        class="w-full h-full object-contain">
                                </div>
                                <div class="slide absolute inset-0 opacity-0 transition-opacity duration-500">
                                    <img src="/imgs/jobs/jedicon/Imgs/Picture3.png" alt="Slide 3"
                                        class="w-full h-full object-contain">
                                </div>
                                <div class="slide absolute inset-0 opacity-0 transition-opacity duration-500">
                                    <img src="/imgs/jobs/jedicon/Imgs/Picture4.png" alt="Slide 4"
                                        class="w-full h-full object-contain">
                                </div>
                                <div class="slide absolute inset-0 opacity-0 transition-opacity duration-500">
                                    <img src="/imgs/jobs/jedicon/Imgs/Picture5.png" alt="Slide 5"
                                        class="w-full h-full object-contain">
                                </div>
                                <div class="slide absolute inset-0 opacity-0 transition-opacity duration-500">
                                    <img src="/imgs/jobs/jedicon/Imgs/Picture6.png" alt="Slide 6"
                                        class="w-full h-full object-contain">
                                </div>
                            </div>
                            <!-- Navegação do Carrossel -->
                            <button
                                class="absolute left-2 top-1/2 -translate-y-1/2 bg-white/20 hover:bg-white/30 rounded-full p-2 transition-colors">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 19l-7-7 7-7" />
                                </svg>
                            </button>
                            <button
                                class="absolute right-2 top-1/2 -translate-y-1/2 bg-white/20 hover:bg-white/30 rounded-full p-2 transition-colors">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 5l7 7-7 7" />
                                </svg>
                            </button>
                            <!-- Botão Fechar Mobile -->
                            <button type="button"
                                class="absolute top-2 right-2 md:hidden bg-white/80 rounded-full p-2 shadow close-carousel-btn"
                                aria-label="Fechar imagens">
                                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <line x1="6" y1="6" x2="18" y2="18"
                                        stroke-width="2" />
                                    <line x1="6" y1="18" x2="18" y2="6"
                                        stroke-width="2" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- Informações do Projeto -->
                    <div class="p-6 pb-0">
                        <div class="p-6 border-b border-gray-200">
                            <div class="flex flex-col gap-2">
                                <h3 class="text-xl font-bold text-gray-800">
                                    JediconPT
                                </h3>
                                <div class="flex items-center gap-4">
                                    <span
                                        class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
                                        {t.projects.status.finished}
                                    </span>
                                    <span class="text-gray-500">2025</span>
                                </div>
                            </div>
                        </div>
                        <p class="text-gray-600 mb-4 mt-4">
                            {t.projects.jedicon.description}
                        </p>
                    </div>

                    <!-- Link fixo na base do card -->
                    <div class="p-6 pt-4 relative z-30 bg-white">
                        <div class="flex gap-4">
                            <a href="https://jedicon.pt" target="_blank"
                                class="inline-flex items-center text-blue-600 hover:text-blue-800">
