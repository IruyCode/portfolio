            <!-- Grid de Projetos -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Projeto 1 -->
                <div class="group relative bg-white rounded-xl shadow-lg overflow-hidden" data-aos="zoom-in-up"
                    data-aos-delay="100" data-aos-duration="800" data-aos-easing="ease-out-cubic">
                    <!-- Imagem Principal + Botão Lupa Mobile -->
                    <div class="relative h-64 overflow-hidden flex items-center justify-center bg-white">
                        <img src="/imgs/jedicon/logo/logo_jedicon.png" alt="JediconPT_logo"
                            class="max-h-40 w-auto object-contain mx-auto" />
                        <!-- Botão Lupa Mobile -->
                        <button type="button"
                            class="absolute right-2 top-2 md:hidden bg-white/80 rounded-full p-2 shadow show-carousel-btn"
                            aria-label="Ver imagens">
                            <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
