---
const { t } = Astro.props;
---

<main class="flex-grow">
    <!-- Home -->
    <section id="home" class="bg-aurora min-h-screen flex items-center justify-center text-white px-4">
        <div class="max-w-6xl w-full grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
            <!-- Lado esquerdo: texto -->
            <div class="text-left space-y-4">
                <h1 class="text-4xl md:text-5xl font-bold leading-tight">
                    <span id="typing-h1" class="whitespace-pre-line">{t.home.title}</span>
                </h1>
                <p id="typing-p" class="text-lg md:text-xl opacity-90 whitespace-pre-line">
                    {t.home.p}
                </p>
            </div>

            <!-- Lado direito -->
            <div id="flip-card" class="w-72 h-72 md:w-96 md:h-96 [perspective:1000px] relative cursor-pointer group">
                <div id="flip-inner"
                    class="relative w-full h-full duration-700 preserve-3d transition-transform rounded-full">
                    <!-- Frente -->
                    <div
                        class="absolute w-full h-full backface-hidden rounded-full overflow-hidden border-4 border-white/30 shadow-xl">
                        <img src="/imgs/marginal2.jpeg" alt="Foto 1" class="w-full h-full object-cover" />
                    </div>
                    <!-- Verso -->
                    <div
                        class="absolute w-full h-full backface-hidden rotate-y-180 rounded-full overflow-hidden border-4 border-white/30 shadow-xl">
                        <img src="/imgs/marginalghibli.png" alt="Foto 2" class="w-full h-full object-cover" />
                    </div>
                </div>
                <!-- Indicador visual - de alteracao -->
                <div
                    class="absolute inset-0 bg-black/40 backdrop-blur-sm text-white flex flex-col items-center justify-center rounded-full opacity-0 group-hover:opacity-100 transition duration-500">
                    <svg class="w-8 h-8 mb-2 animate-spin-slow" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-width="2" d="M4 4v6h6M20 20v-6h-6M4 20l6-6M20 4l-6 6"></path>
                    </svg>
                    <span class="text-sm">Clique para ver outro lado</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Sobre Mim -->
    <section id="about" class="min-h-screen py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12">
                {t.about.title}
            </h2>

            <!-- Informações Pessoais -->
            <div class="grid md:grid-cols-2 gap-8 mb-16">
                <div class="space-y-4 p-6 bg-gray-50 rounded-xl">
                    <h3 class="text-2xl font-semibold text-gray-800">
                        {t.about.who.title}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        {t.about.who.text}
                    </p>
                </div>

                <div class="space-y-4 p-6 bg-gray-50 rounded-xl">
                    <h3 class="text-2xl font-semibold text-gray-800">
                        {t.about.skills.title}
                    </h3>

                    <!-- Desenvolvimento Web (PHP/Laravel) -->
                    <div>
                        <h4 class="text-md font-medium text-blue-700 mb-2">
                            {t.about.skills.backend}
                        </h4>
                        <div class="flex flex-wrap gap-2">
                            <span
                                class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">{t.about.skills.items.php}</span>
                            <span
                                class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">{t.about.skills.items.laravel}</span>
                            <span
                                class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">{t.about.skills.items.mysql}</span>
                        </div>
                    </div>

                    <!-- Desenvolvimento Web (Front-end / Fullstack JS) -->
                    <div>
                        <h4 class="text-md font-medium text-green-700 mb-2">
                            {t.about.skills.js}
                        </h4>
                        <div class="flex flex-wrap gap-2">
                            <span
                                class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">{t.about.skills.items.react}</span>
                            <span
                                class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">{t.about.skills.items.express}</span>
                            <span
                                class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">{t.about.skills.items.mongo}</span>
                            <span
                                class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">{t.about.skills.items.js}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
