---
const { t } = Astro.props;
---

<footer class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid md:grid-cols-4 gap-8">
            <!-- Sobre -->
            <div class="space-y-4">
                <h3 class="text-xl font-bold">{t.footer.about}</h3>
                <p class="text-gray-400">{t.footer.aboutText}</p>
            </div>

            <!-- Links Rápidos -->
            <div class="space-y-4">
                <h3 class="text-xl font-bold">{t.footer.quickLinks}</h3>
                <ul class="space-y-2">
                    <li>
                        <a href="#home" class="text-gray-400 hover:text-white"
                            >{t.footer.links.home}</a>
                    </li>
                    <li>
                        <a href="#about" class="text-gray-400 hover:text-white"
                            >{t.footer.links.about}</a>
                    </li>
                    <li>
                        <a
                            href="#projects"
                            class="text-gray-400 hover:text-white"
                            >{t.footer.links.projects}</a>
                    </li>
                    <li>
                        <a href="#works" class="text-gray-400 hover:text-white"
                            >{t.footer.links.works}</a>
                    </li>
                    <li>
                        <a
                            href="#contact"
                            class="text-gray-400 hover:text-white"
                            >{t.footer.links.contact}</a>
                    </li>
                </ul>

            </div>

            <!-- Serviços -->
            <div class="space-y-4">
                <h3 class="text-xl font-bold">{t.footer.services}</h3>
                <ul class="space-y-2">
                    {
                        t.footer.servicesList.map((service) => (
                            <li class="text-gray-400">{service}</li>
                        ))
                    }
                </ul>
            </div>

            <!-- Newsletter -->
            <div class="space-y-4">
                <h3 class="text-xl font-bold">{t.footer.newsletter}</h3>
                <p class="text-gray-400">{t.footer.newsletterText}</p>
                <form class="flex flex-col md:flex-row gap-2">
                    <input
                        type="email"
                        placeholder={t.footer.emailPlaceholder}
                        class="w-full px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700 focus:outline-none focus:border-blue-500"
                    />
                    <button
                        type="submit"
                        class="w-full md:w-auto px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                    >
                        {t.footer.subscribe}
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Linha Divisória -->
    <div class="border-t border-gray-800">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <div
                class="flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-gray-400">
                    &copy; 2024 Portfolio. {t.footer.copyright}
                </p>
                <div class="flex gap-6">
                    <a href="#" class="text-gray-400 hover:text-white"
                        >{t.footer.terms}</a
                    >
                    <a href="#" class="text-gray-400 hover:text-white"
                        >{t.footer.privacy}</a
                    >
                </div>
            </div>
        </div>
    </div>
</footer>
